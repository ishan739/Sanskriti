<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Allows camera to save in Pictures folder specific to your app -->
    <external-files-path
        name="images"
        path="Pictures/" />

    <!-- Fallback: cache directory -->
    <cache-path
        name="camera_cache"
        path="." />
</paths>
